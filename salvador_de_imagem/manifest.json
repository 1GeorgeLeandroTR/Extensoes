{
	"manifest_version": 2,
	"version": "0.0.1",
	"icons": { 
		"16": "icons/16.png",
        "48": "icon.png",
        "128": "icon.png" },
	"name": "Image saver",
	"author": "George Leandro",
	"permissions":[
		"contextMenus"
	],
	"web_accessible_resources": ["templates/popup.html"],
	"content_scripts":[{
		"run_at": "document_end",
    	"matches": ["*://*/*"],
		"js":["js/content_conf/content.js"]
	}],
	"background":{
		"scripts":[
			"js/background_conf/background_front.js",
			"js/background_conf/background_back.js",
			"js/popup_conf/test.js"]
	},
	
	"browser_action":{}
}